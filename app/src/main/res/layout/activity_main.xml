<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="42dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Feedback Form"
                android:textAlignment="center"
                android:textColor="#5C00FF"
                android:textSize="30sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/textName"
                android:layout_width="345dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:text="Restaurant Name"
                android:textAlignment="viewStart"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/ResName"
                android:layout_width="345dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="0dp"
                android:ems="10"
                android:hint="Enter Restaurant Name"
                android:inputType="textPersonName"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textType"
                android:layout_width="345dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:text="Restaurant Type"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/ResType"
                android:layout_width="345dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:ems="10"
                android:hint="Enter Restaurant Type"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/textAddress"
                android:layout_width="345dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:text="Address"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/Address"
                android:layout_width="345dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:ems="10"
                android:hint="Enter Address of Restaurant"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/textHotline"
                android:layout_width="345dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:text="Hotline"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/Hotline"
                android:layout_width="345dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:ems="10"
                android:hint="Enter Hotline"
                android:inputType="number" />

            <TextView
                android:id="@+id/textAvgPrice"
                android:layout_width="345dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:text="Average Price/ Person"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/AvgPrice"
                android:layout_width="345dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:ems="10"
                android:hint="Enter Average Price of Mean Person"
                android:inputType="number" />

            <TextView
                android:id="@+id/textDate"
                android:layout_width="345dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:text="DateTime"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/DateTime"
                android:layout_width="345dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:ems="10"
                android:hint="Enter Date of Birth (DD/MM/YYYY)"
                android:inputType="date" />

            <TextView
                android:id="@+id/textService"
                android:layout_width="345dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:text="Service Rate (Star)"
                android:textSize="24sp" />

            <Spinner
                android:id="@+id/spinnerService"
                android:layout_width="345dp"
                android:layout_height="38dp"
                android:layout_marginLeft="30dp"
                android:entries="@array/Rate"
                android:spinnerMode="dialog" />

            <TextView
                android:id="@+id/textClean"
                android:layout_width="345dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:text="Clean Rate (Star)"
                android:textSize="24sp" />

            <Spinner
                android:id="@+id/spinnerClean"
                android:layout_width="345dp"
                android:layout_height="38dp"
                android:layout_marginLeft="30dp"
                android:entries="@array/Rate"
                android:spinnerMode="dialog" />

            <TextView
                android:id="@+id/textFood"
                android:layout_width="345dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:text="Food Rate (Star)"
                android:textSize="24sp" />

            <Spinner
                android:id="@+id/spinnerFood"
                android:layout_width="345dp"
                android:layout_height="38dp"
                android:layout_marginLeft="30dp"
                android:entries="@array/Rate"
                android:spinnerMode="dialog" />

            <TextView
                android:id="@+id/textNotes"
                android:layout_width="345dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:text="Notes"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/editTextTextMultiLine"
                android:layout_width="345dp"
                android:layout_height="113dp"
                android:layout_marginLeft="30dp"
                android:ems="10"
                android:gravity="start|top"
                android:inputType="textMultiLine" />

            <TextView
                android:id="@+id/textReporter"
                android:layout_width="345dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:text="Reporter Name"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/Reporter"
                android:layout_width="345dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:ems="10"
                android:hint="Enter Full Name of the Reporter"
                android:inputType="textPersonName" />

            <Button
                android:id="@+id/button"
                android:layout_width="345dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:onClick="onSubmit"
                android:text="Send Feedback"
                android:textColor="#FF0057"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>